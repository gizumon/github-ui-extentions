{
  "manifest_version": 3,

  "name": "GitHub UI Extensions",
  "description": "Chrome Extension for GitHub",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://*/*/pulls*",
        "https://*/*/pull/*"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "https://github.com/*",
    "https://*/*/pulls*",
    "https://*/*/pull/*"
  ]
}
